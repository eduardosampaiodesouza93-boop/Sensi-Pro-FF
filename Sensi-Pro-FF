<script>
// UTIL
const rand=(a,b)=>Math.floor(Math.random()*(b-a+1))+a;

// SENS
const sensNames=["Geral","Red Dot","2x","4x","AWM","Olhadinha"];
const sensDiv=document.getElementById("sens");
sensNames.forEach(n=>{
  sensDiv.innerHTML+=`
  <label>${n}</label>
  <input type="range" min="0" max="200" value="100" id="${n}">
  <div class="badge" id="v${n}">100</div>`;
  document.getElementById(n).oninput=e=>{
    document.getElementById("v"+n).innerText=e.target.value;
  };
});
function randomSens(){
  sensNames.forEach(n=>{
    let v=rand(0,200);
    document.getElementById(n).value=v;
    document.getElementById("v"+n).innerText=v;
  });
}

// DPI / BOTÃƒO
function gerarDPI(){
  let v=rand(300,900);
  dpi.value=v;
  dpiOut.innerText="DPI sugerido: "+v;
}
function gerarBotao(){
  let v=rand(20,80);
  botao.value=v;
  botaoOut.innerText="BotÃ£o: "+v+"%";
}

// RANK
let xp=0,level=1;
function ganharXP(){
  xp+=10;
  if(xp>=100){xp=0;level++}
  let r="Bronze";
  if(level>=5)r="Prata";
  if(level>=10)r="Ouro";
  if(level>=20)r="Diamante";
  if(level>=30)r="Mestre";
  rank.innerText=r+" | NÃ­vel "+level;
}

// PERSONAGENS
const personagens=[
"Alok","Chrono","Skyler","K","Jota","Moco","Maxim","Kelly",
"Hayato","Wukong","Leon","Dimitri","Kapella","Thiva",
"Laura","Rafael","Nikita","Miguel","Shirou","Homer"
];
function gerarPersonagens(){
  combo.innerText=
    personagens[rand(0,personagens.length-1)]+" + "+
    personagens[rand(0,personagens.length-1)]+" + "+
    personagens[rand(0,personagens.length-1)];
}

// PETS
const pets=[
"Falco","Poring","Ottero","Detective Panda","Mr. Waggor",
"Beaston","Rockie","Dreki","Zasil","Sensei Tig"
];
function gerarPets(){
  petsCombo.innerText=
    pets[rand(0,pets.length-1)]+" + "+
    pets[rand(0,pets.length-1)];
}

// META
function gerarMeta(){
  randomSens();
  gerarDPI();
  gerarBotao();
  gerarPersonagens();
  gerarPets();
  comboMeta.innerText="META perfeita para modo "+modo.value;
}

// IA
function ia(){
  let t=q.value.toLowerCase();
  let r="Pergunte sobre dpi, botÃ£o, lag, rush.";
  if(t.includes("dpi"))r="DPI entre 420 e 560 Ã© o mais usado.";
  if(t.includes("botÃ£o"))r="BotÃ£o entre 45% e 60% ajuda no capa.";
  if(t.includes("lag"))r="Ative modo jogo e feche apps.";
  if(t.includes("rush"))r="Rush: Kelly + Jota + Alok.";
  iaOut.innerText=r;
}
</script>

